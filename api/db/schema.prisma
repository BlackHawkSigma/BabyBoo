datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "native"
}

model User {
  id                  Int       @id @default(autoincrement())
  email               String    @unique
  name                String
  hashedPassword      String
  salt                String
  resetToken          String?
  resetTokenExpiresAt DateTime?
}

model Baby {
  name      String
  birthDate DateTime

  @@id([name, birthDate])
}

model Weight {
  id         Int      @id @default(autoincrement())
  value      Int /// in gram
  recordedAt DateTime @default(now())
  createdAt  DateTime @default(now())
}

model Feeding {
  id          Int          @id @default(autoincrement())
  type        FeedingType
  side        FeedingSide?
  startTime   DateTime
  endTime     DateTime?
  pauses      Int? /// in minutes
  startWeight Int? /// in gram
  endWeight   Int? /// in gram
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

enum FeedingType {
  BREAST
  BOTTLE
}

enum FeedingSide {
  LEFT
  RIGHT
}

model DiaperChange {
  id        Int       @id @default(autoincrement())
  startTime DateTime
  endTime   DateTime?
  pee       Boolean
  poop      Boolean
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Temperature {
  id         Int      @id @default(autoincrement())
  value      Float /// in Â°C
  recordedAt DateTime @default(now())
  createdAt  DateTime @default(now())
}
