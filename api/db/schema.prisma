datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "native"
}

model User {
  id                  Int       @id @default(autoincrement())
  email               String    @unique
  name                String?
  hashedPassword      String
  salt                String
  resetToken          String?
  resetTokenExpiresAt DateTime?
}

model Weight {
  id         Int      @id @default(autoincrement())
  value      Float
  recordedAt DateTime @default(now())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

}

model Feeding {
  id          Int          @id @default(autoincrement())
  type        FeedingType
  side        FeedingSide?
  startTime   DateTime
  endTime     DateTime?
  startWeight Float?
  endWeight   Float?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

enum FeedingType {
  BREAST
  BOLLTE
}

enum FeedingSide {
  LEFT
  RIGHT
  BOTH
}
